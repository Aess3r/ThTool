<div class="container-header">
    <%- include ('../partials/header') %> 
    <div class="container">
      <div class="dash-message"><%- include ('../partials/messages') %></div>  
        <div class="container-split">
            <div class="split-left">
                <form action="/dash" method="POST">
                    <div class="log-rows">
                        <label for="itemcode">Tuote koodi</label>
                        <input
                            type="text"
                            id="itemcode"
                            name="itemcode"
                            class="form-control"
                            placeholder="Tuote numer"
                            value="">
                    </div>
                    <div class="log-rows">
                        <label for="bladder">Tyynyn numero *</label>
                        <input
                            type="text"
                            id="bladder"
                            name="bladder"
                            class="form-control"
                            placeholder="Tyyny malli"
                            value="">
                    </div>
                    <div class="log-rows" hidden>
                        <label for="updatedate">p√§ivitetty</label>
                        <input
                            type="date"
                            id="updatedate"
                            name="updatedate"
                            class="form-control"
                            placeholder=""
                            value="">
                    </div>
                    <div class="log-rows">
                        <label for="qty">Paistettu</label>
                        <input
                            type="value"
                            id="qty"
                            name="qty"
                            class="form-control"
                            placeholder="Montako kierrosta Paistettu"
                            value=""
                            default="0">
                    </div>
                    <div class="log-rows">
                        <label for="unique">1-Laipan numero</label>
                        <input
                            type="text"
                            id="unique"
                            name="unique"
                            class="form-control"
                            placeholder="1-Laipan numero"
                            value="">
                    </div>
                    <div class="log-rows">
                        <label for="line">Linja *</label>
                        <select id="line" name="line" class="form-control">
                            <option value=""></option>
                            <option value="1">P11-P14</option>
                            <option value="2">P15-P53</option>
                        </select>
                    </div>
                    <div class="log-rows">
                        <label for="stored">Varastointi paikka *</label>
                        <select id="stored" name="stored" class="form-control">
                            <option value=""></option>
                            <option value="A1">A1</option>
                            <option value="B1">B1</option>
                            <option value="C1">C1</option>
                            <option value="D1">D1</option>
                            <option value="E1">E1</option>
                            <option value="F1">F1</option>
                            <option value="prod">Tuotantoon</option>
                        </select>
                    </div>
                    <a href="/dash">Peruuta</a>
                    <button type="submit">Tallenna</button>
                </form>
            </div>
            <div class="split-right">Varasto tilanne
                <div class="container">
                <% bladders.forEach(bladders => { %>
                    <div><%= bladders.itemcode %></div>    
                <% })%>
                </div>
            </div>
        </div>

    </div>
</div>
